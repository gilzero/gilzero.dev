<div data-drupal-messages>
  {% for type, messages in message_list %}
    {% for message in messages %}
      {{ include('dsfr4drupal:alert', {
        'attributes': create_attribute({'role': (type == 'status' ? 'status' : 'alert') }),
        'type': (type == 'status') ? 'success' : type,
        'content': message,
        'has_button': true,
      }, with_context=false) }}
    {% endfor %}
  {% endfor %}
</div>
